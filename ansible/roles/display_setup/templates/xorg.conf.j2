Section "ServerFlags"
    Option "BlankTime" "0"
    Option "StandbyTime" "0"
    Option "SuspendTime" "0"
    Option "OffTime" "0"
    Option "DontZap" "true"
EndSection

Section "InputClass"
    Identifier "No Mouse Acceleration"
    MatchIsPointer "yes"
    Option "AccelerationProfile" "-1"
    Option "AccelerationScheme" "none"
EndSection

Section "Monitor"
    Identifier "Monitor0"
    Option "DPMS" "false"
EndSection

Section "ServerLayout"
    Identifier "ServerLayout0"
    Option "StandbyTime" "0"
    Option "SuspendTime" "0"
    Option "OffTime" "0"
    Option "BlankTime" "0"
EndSection

Section "Device"
    Identifier "Device0"
    Driver "modesetting"
    {% if inventory_hostname == 'left_fin' %}
    Option "Monitor-HDMI-1" "Monitor0"
    Option "RandRRotation" "on"
    Option "Rotate" "CCW"
    {% elif inventory_hostname == 'right_fin' %}
    Option "Monitor-HDMI-1" "Monitor0"
    Option "RandRRotation" "on"
    Option "Rotate" "CW"
    {% endif %}
EndSection

Section "Screen"
    Identifier "Screen0"
    Device "Device0"
    Monitor "Monitor0"
    DefaultDepth 24
    SubSection "Display"
        Depth 24
    EndSubSection
EndSection