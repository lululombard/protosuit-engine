Section "ServerFlags"
    Option "BlankTime" "0"
    Option "StandbyTime" "0"
    Option "SuspendTime" "0"
    Option "OffTime" "0"
    Option "DontZap" "true"
EndSection

Section "InputClass"
    Identifier "No Mouse Acceleration"
    MatchIsPointer "yes"
    Option "AccelerationProfile" "-1"
    Option "AccelerationScheme" "none"
EndSection

Section "Monitor"
    Identifier "HDMI-1"
    Option "DPMS" "false"

{% if inventory_hostname == 'left_fin' %}
    Option "Rotate" "left"
{% elif inventory_hostname == 'right_fin' %}
    Option "Rotate" "right"
{% endif %}
EndSection

Section "ServerLayout"
    Identifier "ServerLayout0"
    Option "StandbyTime" "0"
    Option "SuspendTime" "0"
    Option "OffTime" "0"
    Option "BlankTime" "0"
EndSection