# Allow anonymous connections (since we're on a private network)
allow_anonymous true

# Listen on all interfaces
listener 1883 0.0.0.0

# Logging configuration
log_dest syslog
log_dest stdout
log_dest topic
log_type error
log_type warning
log_type notice
log_type information

# Connection settings
max_connections -1
max_queued_messages 200
persistent_client_expiration 3d