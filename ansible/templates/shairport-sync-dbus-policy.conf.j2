<!-- D-Bus policy for shairport-sync - Deployed by Ansible -->
<!DOCTYPE busconfig PUBLIC
          "-//freedesktop//DTD D-BUS Bus Configuration 1.0//EN"
          "http://www.freedesktop.org/standards/dbus/1.0/busconfig.dtd">
<busconfig>
  <!-- Allow root, shairport-sync, and protosuit user to own the service name -->
  <policy user="root">
    <allow own_prefix="org.gnome.ShairportSync"/>
  </policy>
  <policy user="{{ pi_user }}">
    <allow own_prefix="org.gnome.ShairportSync"/>
  </policy>
  <policy user="shairport-sync">
    <allow own_prefix="org.gnome.ShairportSync"/>
  </policy>

  <!-- Allow anyone to invoke methods on Shairport Sync -->
  <policy context="default">
    <allow send_destination_prefix="org.gnome.ShairportSync"/>
    <allow receive_sender="org.gnome.ShairportSync"/>
  </policy>
</busconfig>
